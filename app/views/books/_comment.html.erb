<% book.book_comments.each do |book_comment| %>
  <tr class="comments">
    <td>
      <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
      <%= book_comment.user.name %>
    </td>
    <td><%= book_comment.comment %></td>

    <% if user.id == current_user.id %>
      <td><%= link_to 'Destroy', book_book_comment_path(book_comment.book.id, book_comment.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_comment_#{@book.id}"%></td>
    <% end %>
  </tr>
<% end %>
